<?xml version="1.0" encoding="utf-8"?>

<!-- Common templates for snippets -->
<templates id="as_common_templates">

	<!-- Template for tab option in brand/category product snippet's dialog box -->
	<t t-name="theme_alan.tab_option_template">
		<div class="as-edit-layout-box">
            <h6 class="as-edit-sub-label">Tab options</h6>
            <div class="as-edit-layout-box-in">
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="tabOptions" id="single" value="single" checked="checked"/>
                    <label class="custom-control-label" for="single">
                        Single Tab
                    </label>
                </div>
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="tabOptions" id="multiple" value="multiple" />
                    <label class="custom-control-label" for="multiple">
                        Multiple Tab
                    </label>
                </div>
            </div>
        </div>
	</t>

	<!-- Template for main layout option in snippet's dialog box -->
	<t t-name="theme_alan.main_layout_option_template">
		<div class="as-edit-layout-box ui_option">
            <h6 class="as-edit-sub-label">Slider / Column</h6>
            <div class="as-edit-layout-box-in">
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="snippetView" id="slider" value="slider" checked="checked"/>
                    <label class="custom-control-label" for="slider">
                        Slider
                    </label>
                </div>
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="snippetView" id="column" value="column" />
                    <label class="custom-control-label" for="column">
                        Column
                    </label>
                </div>
            </div>
        </div>
        <div class="as-edit-layout-box">
            <h6 class="as-edit-sub-label">Select Layout</h6>
            <div class="as-edit-layout-box-in">
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style1" value="style1" checked="checked"/>
                    <label class="custom-control-label" for="style1">
                        Layout Style 1
                    </label>
                </div>
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style2" value="style2" />
                    <label class="custom-control-label" for="style2">
                        Layout Style 2
                    </label>
                </div>
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style3" value="style3" />
                    <label class="custom-control-label" for="style3">
                        Layout Style 3
                    </label>
                </div>
                <div class="custom-control custom-radio">
                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style4" value="style4" />
                    <label class="custom-control-label" for="style4">
                        Layout Style 4
                    </label>
                </div>
            </div>
        </div>
	</t>

	<!-- Template for slider option in snippet's dialog box -->
	<t t-name="theme_alan.slider_options_template">
		<div class="as-edit-layout-box sl_option">
            <h6 class="as-edit-sub-label">Slider Options</h6>
            <div class="as-edit-layout-box-in">
                <div>
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input autoSlider" type="checkbox" name="autoSlider" id="autoSlider" value="autoSlider" />
                        <label class="custom-control-label" for="autoSlider">
                            Auto Slider
                        </label>
                    </div>
                    <div class="timerClass d-none pt-3">
                        <h6 class="as-edit-sub-label">Slider Time (Seconds)</h6>
                        <div class="as-edit-layout-box-in as-edit-col-list">
                            <div class="custom-control custom-checkbox">
                                <input type="radio" name="sTimer" id="sec3" class="custom-control-input" value="3" checked="checked"/>
                                <label class="custom-control-label" for="sec3">3</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="radio" name="sTimer" id="sec4" class="custom-control-input" value="4"/>
                                <label class="custom-control-label" for="sec4">4</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="radio" name="sTimer" id="sec5" class="custom-control-input" value="5"/>
                                <label class="custom-control-label" for="sec5">5</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="radio" name="sTimer" id="sec6" class="custom-control-input" value="6"/>
                                <label class="custom-control-label" for="sec6">6</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</t>

	<!-- Template for column layout option in snippet's dialog box -->
	<t t-name="theme_alan.column_layout_options_template">
		<div class="as-edit-layout-box">
            <h6 class="as-edit-sub-label">Columns</h6>
            <div class="as-edit-layout-box-in as-edit-col-list">
                <div class="custom-control custom-checkbox">
                    <input type="radio" name="dataCount" id="val1" value="1" class="custom-control-input" checked="checked"/>
                    <label class="custom-control-label" for="val1">1</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="radio" name="dataCount" id="val2" value="2" class="custom-control-input"/>
                    <label class="custom-control-label" for="val2">2</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="radio" name="dataCount" id="val3" value="3" class="custom-control-input"/>
                    <label class="custom-control-label" for="val3">3</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="radio" name="dataCount" id="val4" value="4" class="custom-control-input"/>
                    <label class="custom-control-label" for="val4">4</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="radio" name="dataCount" id="val5" value="5" class="custom-control-input"/>
                    <label class="custom-control-label" for="val5">5</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="radio" name="dataCount" id="val6" value="6" class="custom-control-input"/>
                    <label class="custom-control-label" for="val6">6</label>
                </div>
            </div>
        </div>
	</t>

	<!-- Template for quick options in product snippet's dialog box -->
	<t t-name="theme_alan.quick_options_template">
		<div class="as-edit-layout-box">
            <h6 class="as-edit-sub-label">Quick Option</h6>
            <div class="as-edit-col-list as-edit-col-list-equal">

            	<!-- Options for all product snippets -->
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" name="cart" id="cart" value="cart"/>
                    <label class="custom-control-label" for="cart">
                        <i class="fa fa-shopping-cart"></i> Cart
                    </label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" name="prodLabel" id="prodLabel" value="prodLabel" />
                    <label class="custom-control-label" for="prodLabel">
                        <i class="fa fa-bookmark"></i> Product Label
                    </label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" name="rating" id="rating" value="rating"/>
                    <label class="custom-control-label" for="rating">
                        <i class="fa fa-star"></i> Rating
                    </label>
                </div>

                <!-- Options for only product banner and product offer snippets -->
                <t t-if="data.type == 'banner' or data.type == 'offer'">
	                <div class="custom-control custom-checkbox">
	                    <input class="custom-control-input" type="checkbox" name="buyNow" id="buyNow" value="buyNow"/>
	                    <label class="custom-control-label" for="buyNow">
	                        <i class="fa fa-flash"></i> Buy Now
	                    </label>
	                </div>
	            </t>

	            <!-- Options for product snippets except for product banner and product offer -->
	            <t t-if="data.type == 'product' or data.type == 'prod_variant' or data.type == 'best_product' or data.type == 'latest_product'">
	                <div class="custom-control custom-checkbox">
	                    <input class="custom-control-input" type="checkbox" name="quickView" id="quickView" value="quickView" />
	                    <label class="custom-control-label" for="quickView">
	                        <i class="fa fa-eye"></i> Quick View
	                    </label>
	                </div>
	                <div class="custom-control custom-checkbox">
	                    <input class="custom-control-input" type="checkbox" name="compare" id="compare" value="compare"/>
	                    <label class="custom-control-label" for="compare">
	                        <i class="fa fa-exchange"></i> Compare
	                    </label>
	                </div>
	                <div class="custom-control custom-checkbox">
	                    <input class="custom-control-input" type="checkbox" name="wishList" id="wishList" value="wishList" />
	                    <label class="custom-control-label" for="wishList">
	                        <i class="fa fa-heart"></i> WishList
	                    </label>
	                </div>
	                <div class="custom-control custom-checkbox infinity_option d-none">
	                    <input class="custom-control-input" type="checkbox" name="infinity" id="infinity" value="infinity" />
	                    <label class="custom-control-label" for="infinity">
	                        <i class="fa fa-refresh"></i> Infinity Slider
	                    </label>
	                </div>
	            </t>

	            <!-- Option for only product banner snippet -->
	            <t t-if="data.type == 'banner'">
	            	<div class="custom-control custom-checkbox slider_loop d-none">
                        <input class="custom-control-input" type="checkbox" name="infinity" id="infinity" value="infinity" />
                        <label class="custom-control-label" for="infinity">
                            <i class="fa fa-refresh"></i> Infinity Slider
                        </label>
                    </div>
	            </t>
            </div>
        </div>
	</t>

	<!-- Template for image position options of product banner and product offer snippet's dialog box -->
	<t t-name="theme_alan.image_position_option_template">
		<div class="as-edit-layout-box">
            <h6 class="as-edit-sub-label">Position</h6>
            <div class="as-edit-layout-box-in">
                <div class="custom-control custom-radio">
                    <input class="custom-control-input sel_position" type="radio" name="imgPosition" id="left" value="left" checked="checked"/>
                    <label class="custom-control-label" for="left">
                        Left
                    </label>
                </div>
                <div class="custom-control custom-radio">
                    <input class="custom-control-input sel_position" type="radio" name="imgPosition" id="right" value="right" />
                    <label class="custom-control-label" for="right">
                        Right
                    </label>
                </div>
            </div>
        </div>
	</t>

    <!-- Template for slider pagination option in snippet's dialog box -->
    <t t-name="theme_alan.slider_pagination_option_template">
        <div class="as-edit-layout-box sl_option">
            <h6 class="as-edit-sub-label">Slider pagination</h6>
            <div class="as-edit-layout-box-in">
                <select class="form-select form-control" name="Slider Pagination Options" id="slider_pagination" aria-label="Slider pagination">
                    <option value="1" selected="selected">None</option>
                    <option value="2">Simple</option>
                    <option value="3">Dynamic</option>
                    <option value="4">Progress Bar</option>
                    <option value="5">Fraction</option>
                    <option value="6">Number</option>
                    <option value="7">Scrollbar</option>
                </select>
            </div>
        </div>
    </t>

</templates>