<?xml version="1.0" ?>
<templates>
    <!-- Select2 Dialog  -->
    <div t-name="theme_alan.record_selector_dialog">
        <!-- Modal Header -->
        <div class="as-core-modal-header">
            <h4 class="m-0"> <i class="fa fa-cog"></i> <t t-esc="widget.options.coreTitle"/></h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span >&amp;times;</span>
            </button>
        </div>
        <!-- Modal Body -->
        <div class="as-core-modal-body">
            <div class="form-group row">
                <div class="col-md-3 col-lg-2">
                    <label class="col-form-label font-weight-bold"><t t-esc="widget.options.fieldLabel"/></label>
                </div>
                <div class="col-md-9 col-lg-10">
                    <input type="hidden" name="recordField" id="as-select2-field"
                    t-att-value="widget.options.initIds"/>
                </div>
            </div>
        </div>
        <!-- Modal Footer -->
        <div class="as-core-modal-footer">
            <button class="as-edit-btn as-edit-btn-primary as-save-dialog">
                Save
            </button>
            <button class="as-edit-btn as-edit-btn-secondary as-close-dialog">
                Discard
            </button>
        </div>
    </div>
</templates>