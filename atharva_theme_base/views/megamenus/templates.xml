<template id="as_mm_product_grid" name="Alan: Megamenu Product Grid" groups="base.group_user">
    <section data-name="Dynamic Mega-Menu" class="as-dynamic-megamenu"
    data-mega-popup="theme_alan.product_mega_modal" data-mega-title="Product Gird Configuration"
    t-att-data-record-ids="prod_ids" t-att-data-mega-ui="mega_ui" t-att-data-col-ui="col_ui"
    data-prod-mega-view="grid">
        <div t-if="is_dynamic" t-attf-class="as-product-grid-mega-menu {{mega_ui}}">
            <div class="container">
                <!-- Row -->
                <div t-attf-class="as-mm-row {{col_ui}}">
                    <!-- Col Loop -->
                    <div t-foreach="mega_data" t-as="data" class="as-mm-col">
                        <div class="as-mm-product-grid">
                            <div class="mm-img">
                                <img t-att-src="data['image']" />
                                <a t-att-href="data['access_link']"/>
                            </div>
                            <div class="mm-title">
                                <a t-att-href="data['access_link']"><t t-esc="data['name']"/></a>
                            </div>
                        </div>
                    </div>
                    <!-- End Col Loop -->
                </div>
            </div>
        </div>
        <div t-else="" class="as-product-grid-mega-menu as-product-grid-simple">
            <div class="container">
                <div class="as-mm-row as-mm-row-05">
                    <!-- Col Loop -->
                    <div class="as-mm-col">
                        <div class="as-mm-product-grid">
                            <div class="mm-img">
                                <img src="/atharva_theme_base/static/src/img/megamenu/1000x1000.jpg" />
