    <!-- Mail template is done in a NOUPDATE block So users can freely customize/delete them -->
    <data noupdate="1" >
    <record id="wk_email_verification_email_template_id" model="mail.template">
        <field name="name">Email Verification</field>
        <field name="email_from">${object.partner_id.company_id.email|safe}</field>
        <field name="subject">Email Verification</field>
        <field name="email_to">${(object.partner_id.email or '')|safe}</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="auto_delete" eval="True"/>
        <field name="lang">${object.lang}</field>
        <field name="body_html"><![CDATA[

        <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; color: rgb(34, 34, 34); background-color: #FFF;">
        <div style="text-align:center;width:70%;margin-left:15%">
            <p style="color: rgb(99, 74, 165); font-size: 22px;"> ${object.company_id.name} Account Verification Email</p>
            <p class="text-epsilon" style="font-size: 18px;">Congratulations!! ${object.name}, your account has been created successfully and you are only few seconds away from verifying your account. To verify your account click on the button.</p>
            <div class="btn btn-danger btn-lg"><a href="${object.get_verification_url()}"><b>Verify Your Account</b></a></div>
        </div>
       </div> 

            ]]></field>
    </record>
    </data>
</odoo>
